{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [ "*.cabal"
	              , "stack.yaml"
		      , "cabal.project"
		      , "package.yaml"
		      , "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    },
    "lean": {
      "command": "lean-language-server",
      "args": ["--stdio"],
      "filetypes": ["lean"],
      "settings": {
      }
    }
  }
}
